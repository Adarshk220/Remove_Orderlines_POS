<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.RemoveButton" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-price')]" position="inside">
                    <button t-on-click="_onRemoveClick">
                <i class="fa fa-close" role="img" aria-label="Remove" title="Remove"/>
            </button>
        </xpath>
    </t>
</templates>
